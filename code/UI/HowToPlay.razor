@using System;
@using Sandbox;
@using Sandbox.UI;
@inherits Panel

@namespace ATMP.UI

<root>
    <label class="title">How To Play</label>
    <div class="hr"></div>
    <div class="inner">
        <label>@($"Hold {Input.GetButtonOrigin(GameInputActions.Jump).ToUpperInvariant()} to bunnyhop")</label>
        <label>Shoot the ground below you to rocket jump</label>
        <label>@($"Hold {Input.GetButtonOrigin(GameInputActions.Score).ToUpperInvariant()} to check score")</label>
    </div>
</root>
<style>
    HowToPlay {
        opacity: 0;
        position: absolute;
        display: flex;
        flex-direction: column;
        right: 3%;
        bottom: 6%;
        font-size: 32px;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.56);
        color: white;
        transition: all 5s ease-in-out;
        font-family: Roboto;
        
        width: 600px;
        height: auto;
        padding: 15px;

        &.active

    {
        opacity: 1;
    }

    .title {
        padding-top: 6px;
        font-weight: bold;
        font-size: 38px;
    }

    .inner {
        padding-top: 5px;
        width: 90%;
        display: flex;
        flex-direction: column;
    }

    .hr {
        width: 95%;
        height: 2px;
        background-color: rgb(255, 255, 255, 0.50);
    }

    }
</style>
@code
{
    private RealTimeSince _sinceStart;

    public HowToPlay()
    {
        _sinceStart = 0;
    }

    public override void Tick()
    {
        SetClass("active", _sinceStart <= 10);
    }

    protected override int BuildHash()
    {
        return System.HashCode.Combine(Input.Down(GameInputActions.Score));
    }
}
